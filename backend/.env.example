# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/manuscript-processor
# For MongoDB Atlas (cloud):
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?appName=Cluster0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# RittDocConverter Configuration
# Path to the integrated_pipeline.py script (use absolute path on Windows)
# Windows example: C:/path/to/RittDocConverter/integrated_pipeline.py
# Linux/Mac example: /home/user/RittDocConverter/integrated_pipeline.py
CONVERTER_SCRIPT_PATH=../RittDocConverter/integrated_pipeline.py

# Python executable path (optional, defaults to 'python')
# For Windows with venv: C:/path/to/RittDocConverter/venv/Scripts/python.exe
# For Linux/Mac with venv: /path/to/RittDocConverter/venv/bin/python
# For system Python, leave commented out
# CONVERTER_PYTHON=python
